{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "incremental": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es6",
      "es2015.reflect"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "index.ts",
    "node_modules",
    "dist",
    "packages/jest/test",
    "env",
    "coverage"
  ]
}
