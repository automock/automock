{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".(spec|test).ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coveragePathIgnorePatterns": ["/node_modules/", "spec-assets.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "sample"],
  "coverageDirectory": "./coverage",
  "coverageReporters": [
    "text",
    "cobertura"
  ],
  "testEnvironment": "node"
}
